generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())

  name String @db.VarChar(200)
  email String @db.VarChar(200)
  pw String @db.VarChar(200)
  //posts Post[] //여러개니까 복수s
  //<-> post Post?
}

